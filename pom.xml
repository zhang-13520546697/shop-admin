    <!-- dubbo end -->
  </dependencies>

  <profiles>

    <profile>
      <id>dev</id>
      <properties>
        <env>dev</env>
      </properties>
      <activation>
      <!-- 默认使用的环境，如果在打包的时候不特别指明，则默认使用dev开发环境下的配置 -->
      <activeByDefault>true</activeByDefault>
    </activation>
    </profile>

    <profile>
      <id>prod</id>
      <properties>
        <env>prod</env>
      </properties>
    </profile>

    <profile>
      <id>test</id>
      <properties>
        <env>test</env>
      </properties>
    </profile>
  </profiles>


  <build>
    <finalName>shop-admin-v1</finalName>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <!-- 排除个性文件 保留公共文件 -->
          <exclude>dev/*</exclude>
          <exclude>test/*</exclude>
          <exclude>prod/*</exclude>
          <exclude>datasource.properties</exclude>

        </excludes>
      </resource>

      <resource>
        <!-- 根据环境的不同，包含个性化的文件  -->
        <directory>src/main/resources/${env}</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <!-- 编译打包的时候 -->
          <source>1.8</source>
          <target>1.8</target>
          <encoding>utf-8</encoding>
          <compilerArguments>
            <verbose />
            <bootclasspath>${java.home}\lib\rt.jar;${java.home}\lib\jce.jar</bootclasspath>
          </compilerArguments>

        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
